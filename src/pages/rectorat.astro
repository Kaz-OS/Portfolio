---
import Header from "../layouts/Header.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <Header />

  <main>
    <div class="E5">
      <h1>E5</h1>
      <a class="download" href="/ERA_TableauDeSynthese.xlsx" download>Télécharger ERA_Tableau de synthèse</a>

      <div class="attestations">
        <figure>
          <img src="/images/attestation1-placeholder.png" alt="Attestation 1 (remplacer)" />
          <figcaption>Attestation 1 (remplacer)</figcaption>
        </figure>
        <figure>
          <img src="/images/attestation2-placeholder.png" alt="Attestation 2 (remplacer)" />
          <figcaption>Attestation 2 (remplacer)</figcaption>
        </figure>
      </div>
    </div>

    <div class="E6">
      <h1>E6</h1>
      <p>Contenu à compléter.</p>
    </div>
  </main>
</Layout>

<style>
  main {
    max-width: 1100px;
    margin: 2rem auto;
    padding: 1rem;
    display: grid;
    gap: 2rem;
  }

  .E5,
  .E6 {
    border: 1px solid #ccc;
    border-radius: 16px;
    padding: 1.5rem;
    background: #fafafa;
  }

  .E5 h1,
  .E6 h1 {
    margin-top: 0;
    font-size: 1.4rem;
    text-align: center;
  }

  .download {
    display: inline-block;
    margin: 0.5rem 0 1rem;
    padding: 0.6rem 1rem;
    background: #222;
    color: #fff;
    text-decoration: none;
    border-radius: 8px;
    font-size: 0.95rem;
    transition: background 0.2s;
  }
  .download:hover {
    background: #444;
  }

  .attestations {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1rem;
  }

  .attestations figure {
    margin: 0;
    background: #fff;
    border: 1px solid #ddd;
    border-radius: 12px;
    padding: 0.75rem;
    text-align: center;
  }

  .attestations img {
    max-width: 100%;
    height: auto;
    display: block;
    border-radius: 6px;
    background: #e5e5e5;
    aspect-ratio: 3/2;
    object-fit: cover;
  }

  figure figcaption {
    margin-top: 0.5rem;
    font-size: 0.8rem;
    color: #555;
  }
</style>
