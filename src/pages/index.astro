  .drag-hint {
    font-size: 0.7rem;
    margin-top: 0.3rem;
    color: #666;
    opacity: 0.6;
    font-style: italic;
    letter-spacing: 0.5px;
    transition: opacity 0.35s ease;
    user-select: none;
  }
  .carousel.dragging + .drag-hint,
  .drag-hint.hide {
    opacity: 0;
  }
</style>
